{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@providers/*": ["src/providers/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
